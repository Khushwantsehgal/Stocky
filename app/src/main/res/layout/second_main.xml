        androclass:id="@+id/textView"
        androclass:layout_below="@+id/CurrencySymbol_ListView"
        androclass:layout_alignParentLeft="true"
        androclass:layout_alignParentStart="true"
        androclass:layout_alignParentRight="true"
        androclass:layout_alignParentEnd="true" />

    <Button
        androclass:layout_width="wrap_content"
        androclass:layout_height="wrap_content"
        androclass:text="New Button"
        androclass:id="@+id/button2"
        androclass:layout_below="@+id/textView"
