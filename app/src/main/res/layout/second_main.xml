    androclass:layout_width="match_parent">

    <ListView
        androclass:layout_width="wrap_content"
        androclass:layout_height="wrap_content"
        androclass:id="@+id/CurrencySymbol_ListView"
        androclass:layout_alignParentTop="true"
        androclass:layout_alignParentLeft="true"
        androclass:layout_alignParentStart="true"
        androclass:layout_marginTop="33dp"
